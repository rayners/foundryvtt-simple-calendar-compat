{
  "name": "foundryvtt-simple-calendar-compat",
  "version": "0.3.4",
  "description": "Simple Calendar API compatibility bridge for modern calendar modules",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:junit": "vitest run --reporter=junit --reporter=default",
    "test:coverage:junit": "vitest run --coverage --reporter=junit --reporter=default",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run format:check && npm run typecheck && npm run test:run && npm run build",
    "prepare": "husky",
    "clean": "rimraf dist"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "foundry-vtt",
    "calendar",
    "compatibility",
    "simple-calendar",
    "bridge"
  ],
  "author": "Rayners",
  "license": "MIT",
  "devDependencies": {
    "@rayners/foundry-dev-tools": "^1.5.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jquery": "^3.5.32",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.2",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.24.0",
    "tslib": "^2.6.2",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.19.0",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "seasons-and-stars": "*"
  },
  "peerDependenciesMeta": {
    "seasons-and-stars": {
      "optional": true
    }
  },
  "files": [
    "dist/",
    "module.json",
    "languages/",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rayners/foundryvtt-simple-calendar-compat.git"
  },
  "bugs": {
    "url": "https://github.com/rayners/foundryvtt-simple-calendar-compat/issues"
  },
  "homepage": "https://github.com/rayners/foundryvtt-simple-calendar-compat#readme"
}
